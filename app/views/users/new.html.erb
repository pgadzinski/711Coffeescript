<h1>New User</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

	<%= render 'shared/error_messages' %>

      <%= f.label :FirstName %>
      <%= f.text_field :FirstName %>
<br><br>	
      <%= f.label :LastName %>
      <%= f.text_field :LastName %>
<br><br>
      <%= f.label :email %>
      <%= f.text_field :email %>
<br><br>
      <%= f.label :color %>
      <%= f.text_field :color %>
<br><br>
      <%= f.label :schedStartDate %>
      <%= f.text_field :schedStartDate %>
<br><br>
      <%= f.label :timeZone %>
      <%= f.text_field :timeZone %>
<br><br>
      Current Site<br>
      <%= f.select :currentSite, Site.where("maxscheduler_id = ?", @maxschedulerId).collect {|site| [ site.name, site.id ] }, :style => 'width: 50px;'  %>
<br><br>
      Current Board<br>
      <%= f.select :currentBoard, Board.where("maxscheduler_id = ?", @maxschedulerId).collect {|board| [ board.name, board.id ] }, :style => 'width: 50px;'  %>
<br><br>
      <%= f.label :password %>
      <%= f.password_field :password %>
<br><br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
<br><br>
      <%= f.hidden_field :maxscheduler_id, :value => @maxschedulerId %>
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', users_path %>
