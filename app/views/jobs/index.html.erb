<h1>Listing jobs</h1>
<br>
<table class="table table-striped table-bordered table-condensed" id="jobs">

  <thead>

  <tr>
    <th></th>
    <th></th>
    <th></th>
	<% @attributes.each do |attr| %>
    	<% if attr.name %>
	    	<th><font size=4><%= attr.name %></font></th>   
    	<% end %>
	<% end %> <!--attributeLoop -->
    <th>Resource</th>
    <th>schedDateTime</th>
    <th>schedPixelVal </th>
    <th>Site</th>
    <th>User</th>
  </tr>
</thead>

<tbody>

<% @jobs.each do |job| %>
<% i=1 %>
<tr>
  	<td><%= link_to 'Show', job, :class => 'btn btn-info'  %></td>
    <td><%= link_to 'Edit', edit_job_path(job), :class => 'btn btn-info'  %></td>
    <td><%= link_to 'Delete', job, :class => 'btn btn-danger', confirm: 'Are you sure?', method: :delete %></td>
	<!--attributeLoop -->
    <% @attributes.each do |attr| %>
    	<% if attr.name %>
    	<% @x = "attr"+i.to_s %>
    	<td><%= job[@x] %></td>   
    	<% i=i+1 %>
    	<% end %>
	<% end %> 
    <td><%= job.resource_id %></td>
    <td><%= job.schedDateTime %></td>
    <td><%= job.schedPixelVal %></td>
    <td><%= Site.find(job.site_id).name %></td>
    <td><%= User.find(job.user_id).FirstName %> , <%= User.find(job.user_id).LastName %> </td>
</tr>	
<% end %> <!--jobLoop -->

</tbody>

</table>	
