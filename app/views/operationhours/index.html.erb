<h1>Listing operationhours</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Site</th>
    <th>Day Of The Week</th>
    <th>Start</th>
    <th>Number of Rows</th>
    <th></th>
    <th></th>
  </tr>

<% @operationhours.each do |operationhour| %>
  <tr>
    <td><%= Site.find(operationhour.site_id).name %></td>
    <td><%= operationhour.dayOfTheWeek %></td>
    <td><%= operationhour.start %></td>
    <td><%= operationhour.numberOfRows %></td>
    <td><%= link_to 'Show', operationhour, :class => 'btn btn-info'  %></td>
    <td><%= link_to 'Edit', edit_operationhour_path(operationhour), :class => 'btn btn-info'  %></td>
  </tr>
<% end %>
</table>

