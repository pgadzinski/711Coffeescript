<h1>Editing resource</h1>

<%= form_for(@resource) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :position %><br />
    <%= f.number_field :position %>
  </div>
  <div class="field">
    <%= f.label :board_id %><br />
	<%= f.select :board_id, Board.where("maxscheduler_id = ?", @maxschedulerId).collect {|board| [ board.name, board.id ] } %>
  </div>
  <div class="field">  	
    <%= f.label :site_id %><br />
    <%= f.select :site_id, Site.where("maxscheduler_id = ?", @maxschedulerId).collect {|site| [ site.name, site.id ] } %>    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

